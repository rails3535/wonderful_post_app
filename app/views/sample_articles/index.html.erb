<p id="notice"><%= notice %></p>

<h1>記事</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>内容</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sample_articles.each do |sample_article| %>
      <tr>
        <td><%= sample_article.title %></td>
        <td><%= sample_article.content %></td>
        <td><%= link_to '詳細', sample_article %></td>
        <td><%= link_to '編集', edit_sample_article_path(sample_article) %></td>
        <td><%= link_to '削除', sample_article, method: :delete, data: { confirm: '削除してよろしいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

